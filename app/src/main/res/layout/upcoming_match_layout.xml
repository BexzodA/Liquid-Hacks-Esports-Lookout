<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/teamMatchText"
        android:layout_width="306dp"
        android:layout_height="51dp"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/team2Image"
        android:text="TextView"
        android:textSize="18sp" />

    <Button
        android:id="@+id/team2Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:text="Subscribe" />

    <ImageView
        android:id="@+id/team1Image"
        android:layout_width="100dp"
        android:layout_height="93dp"
        android:layout_below="@+id/teamMatchText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="288dp"
        app:srcCompat="@drawable/leaguelogo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="93dp"
        android:layout_below="@+id/teamMatchText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="81dp"
        app:srcCompat="@drawable/csgologo" />

</RelativeLayout>